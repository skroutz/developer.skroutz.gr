#!/bin/bash

set -e

tmp_path=./build
deploy_to=/var/sites/developer.skroutz.gr
deploy_user=wowbagger
deploy_server=developer.skroutz.gr

#Check for rsync
type rsync >/dev/null || echo "apt-get install rsync"

bundle exec middleman build

echo -e "\n ==> Deploying to $deploy_user@$deploy_server\n"
rsync -e ssh -avz --delete $tmp_path/ $deploy_user@$deploy_server:$deploy_to
ssh $deploy_user@$deploy_server 'rm -vrf /var/sites/developer.skroutz.gr/responses'
